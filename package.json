{
  "name": "healthy-delights",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "install:all": "pnpm install --filter ./client --filter ./server",
    "dev": "concurrently \"pnpm --filter ./client dev\" \"pnpm --filter ./server dev\"",
    "dev:client": "pnpm --filter ./client dev",
    "dev:server": "pnpm --filter ./server dev",
    "build": "pnpm --filter ./client build && pnpm --filter ./server build",
    "start": "pnpm --filter ./server start",
    "format": "prettier --write \"client/src/**/*.{js,css,html}\" $(if [ -d server/src ]; then echo \"server/src/**/*.{js,ts,css,html}\"; fi)",
    "lint": "eslint \"client/src/**/*.js\" $(if [ -d server/src ]; then echo \"server/src/**/*.js server/src/**/*.js\"; fi)",
    "lint:fix": "lint: eslint \"client/src/**/*.js\" $(if [ -d server/src ]; then echo \"server/src/**/*.js server/src/**/*.js\"; fi) --fix",
    "format-and-lint": "pnpm format && pnpm lint"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "globals": "^15.12.0",
    "prettier": "^3.7.3"
  }
}
